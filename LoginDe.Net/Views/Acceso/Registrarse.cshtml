@model LoginDe.Net.ViewModels.UsuarioVM;
@{
    Layout = null;
}

<html>

<head>
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="row mt-5 justify-content-center">

    </div>
        <div class="col-sm-4">

        </div>
            <div class="card">

            </div>

                <div class="card-header">
                    Registrate
                </div>

                <div class="card-body">
                    <form asp-controller="Acceso" asp-action="Registrarse" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Nombre de Usuario" required asp-for="Nombre_Usuario"/>
                        <input class="form-control mb-3" type="text" placeholder="Nombre" required asp-for="Nombre" />
                        <input class="form-control mb-3" type="text" placeholder="Apellido Paterno" required asp-for="Apellido_Paterno"/>
                        <input class="form-control mb-3" type="text" placeholder="Apellido Materno" required asp-for="Apellido_Materno"/>
                        <input class="form-control mb-3" type="text" placeholder="Correo" required asp-for="Correo"/>
                        <input class="form-control mb-3" type="text" placeholder="Contraseña" required asp-for="Password"/>
                        <input class="form-control mb-3" type="text" placeholder="Confirmar Contraseña" required asp-for="ConfirmarPassword"/>
                           
                        <div class="d-grid gap-2 mb-3">
                             <button class="btn btn-primary" type="submit">Registrate</button>
                            </div>
                          
                        @if (ViewData["Mensaje"] != null)
                        { 
                        <div class="alert alert-danger" role="alert">
                        @ViewData["Mensaje"]
                        </div>
                        }
                        ¿Ya tienes una cuenta?<a asp-controller="Acceso"asp-action="Login">Iniciar Sesión</a>
                    </form>
                </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>